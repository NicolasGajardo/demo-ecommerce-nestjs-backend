generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Product {
  id              String                   @id @default(uuid()) @db.VarChar(36)
  price           Int
  stock           Int
  name            String                   @db.VarChar(255)
  description     String                   @db.VarChar(255)
  createdAt       DateTime                 @default(now()) @db.DateTime(6)
  updatedAt       DateTime                 @updatedAt @db.DateTime(6)
  sellerUserEmail String?                  @db.VarChar(255)
  user            User?                    @relation(fields: [sellerUserEmail], references: [email], onDelete: NoAction, onUpdate: NoAction, map: "FK_d608e42121244bad93a5c47efe6")
  transactions    TransactionsOnProducts[]

  @@index([sellerUserEmail], map: "FK_d608e42121244bad93a5c47efe6")
}

model Transaction {
  id             String                   @id @default(uuid()) @db.VarChar(36)
  price          Int
  createdAt      DateTime                 @default(now()) @db.DateTime(6)
  updatedAt      DateTime                 @updatedAt @db.DateTime(6)
  buyerUserEmail String?                  @db.VarChar(255)
  user           User?                    @relation(fields: [buyerUserEmail], references: [email], onDelete: NoAction, onUpdate: NoAction, map: "FK_578bfd518f89f1c012d8950af17")
  products       TransactionsOnProducts[]

  @@index([buyerUserEmail], map: "FK_578bfd518f89f1c012d8950af17")
}

model TransactionsOnProducts {
  quantity      Int
  createdAt     DateTime    @default(now()) @db.DateTime(6)
  updatedAt     DateTime    @updatedAt @db.DateTime(6)
  productId     String      @db.VarChar(36)
  transactionId String      @db.VarChar(36)
  product       Product     @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_861090f78e109917f904969388a")
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_e978405d315a22df73ea16501af")

  @@id([transactionId, productId])
  @@index([productId], map: "FK_861090f78e109917f904969388a")
  @@index([transactionId], map: "FK_e978405d315a22df73ea16501af")
}

model User {
  email       String        @id @db.VarChar(255)
  password    String        @db.VarChar(255)
  createdAt   DateTime      @default(now()) @db.DateTime(6)
  updatedAt   DateTime      @updatedAt @db.DateTime(6)
  product     Product[]
  transaction Transaction[]
}
